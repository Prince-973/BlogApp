<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
      <h1 class="card-title"><%= blog.title %></h1>
      <img src="<%= blog.coverImageUrl %>" width="500px" alt="Blog Image" />

      <pre class="card-text"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
      <img src="<%= blog.cretedBy.profileImageUrl %>" alt="" width="50px" />
      <%= blog.cretedBy.fullName %>
    </div>
    <div class="container mt-4">
      <h2>Comments (<%= comments.length %>)</h2>
  
      <% if (locals.user) { %>
        <form method="post" action="/blog/comment/:<%= blog._id %>">
          <div class="mb-3">
            <input
              type="text"
              name="content"
              class="form-control"
              id="content"
              placeholder="Enter Comment"
            />
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
        
      <% } %>
      <div class="mt-4">
      <% comments.forEach(comment => { %>
        <div>
          <img src="../public/<%= comment.cretedBy.profileImageUrl %>" alt="" width="50px" />
          <%= comment.cretedBy.fullName %>
           <pre><%= comment.content %></pre>
        </div>
      <% }) %>
      </div>
    </div>
    <%-include('./partials/scripts') %>
  </body>
</html>
